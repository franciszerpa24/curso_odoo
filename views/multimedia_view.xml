<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- vista FOR  DE CO MULTIMEDIA -->
    	<record  id="view_multimedia_form" model="ir.ui.view" >
    		<field name="name" >co.multimedia.form</field>
    		<field name="model" >co.multimedia</field><!-- hace referencia al objeto creado en la clase -->
    		<field name="arch" type="xml"> <!-- lo que este dentro de este sera lo que se muestre-->
    			<form string="Multimedia" version="7.0">
    				<sheet>
    					<div class="oe_title"> 
    						<label for="titulo" class="oe_edit_only"/>
    						<h1>
    							<field name="titulo" />
    						</h1>
    						<label for="medio_ids" string="Medios Disponibles" />
    						<field name="medio_ids" widget="many2many_tags"/>
    					</div>

    					<notebook>
    						<page string="Detalles">
    							<group>
    								<field name="fecha_publicacion" />
    								<field name="codigo" required="1"/>
    								<field name="categoria_pelicula_id"/>
    								 <!-- con nolabel = a 1 le quito la etiqueta al datagrid-->
    							</group>
    							 <!-- <group string="Medios Disponibles">
    								<field name="medio_ids" nolabel="1"/>
    							</group> -->
    						</page>  					
    					</notebook>
     				</sheet>
    			</form>
    		</field>
    	</record>
<!--VISTA TREE DE CO MULTIMEDIA-->
		<record  id="view_multimedia_tree" model="ir.ui.view" >
    		<field name="name" >co.multimedia.tree</field>
    		<field name="model" >co.multimedia</field><!-- hace referencia al objeto creado en la clase -->
    		<field name="arch" type="xml"> <!-- lo que este dentro de este sera lo que se muestre-->
    			<tree string="Multimedia" >
					<field name="titulo" />
    				<field name="fecha_publicacion" />
    				<field name="codigo" />
    				<field name="categoria_pelicula_id" />
    			</tree>
    		</field>
    	</record>




    	<record id="action_multimedia" model="ir.actions.act_window" >
    		<field name="name" >Multimedia</field><!-- es-a esla verdadera etiqueta del menu-->
    		<field name="res_model" >co.multimedia</field>
    		<field name="view_type" >form</field>
    		<field name="view_mode" >form,tree</field>
    		<field name="view_id" ref="view_multimedia_tree"/>
    		<field name="help" type="html">
    			<p class="oe_view_nocontent_create">
    				Aca se registran los contenidos multimedia que estarán disponibles en el cátalogo.
    			</p>
    		</field>
    	</record> 

	   	<menuitem action="action_multimedia" id="menu_multimedia" sequence="5" 
	   		parent="submebu_multimedia" /> 
	   		<!--este es el menu multimedia como tal.... y toma el action de la de la linea 37-->
    </data>
</openerp>