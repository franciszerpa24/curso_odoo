<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- vista FOR  DE CO MULTIMEDIA -->
    	<record  id="view_suscriptor_form" model="ir.ui.view" >
    		<field name="name" >co.suscriptor.form</field>
    		<field name="model" >co.suscriptor</field><!-- hace referencia al objeto creado en la clase -->
    		<field name="arch" type="xml"> <!-- lo que este dentro de este sera lo que se muestre-->
    			<form string="Suscriptor" version="7.0">
    				<sheet>
    					<div class="oe_title"> 
    						<label for="nombre" class="oe_edit_only"/>
    						<h1>
    							<field name="nombre" />
    						</h1>
    						
    					</div>

    					<notebook>
    						<page string="Detalles">
    							<group>
    								<field name="cedula" required="1" />
    								<field name="direccion" />
    								
    								 <!-- con nolabel = a 1 le quito la etiqueta al datagrid-->
    							</group>
    							
    						</page>  					
    					</notebook>
     				</sheet>
    			</form>
    		</field>
    	</record>
<!--VISTA TREE DE CO suscriptor-->
		<record  id="view_suscriptor_tree" model="ir.ui.view" >
    		<field name="name" >co.suscriptor.tree</field>
    		<field name="model" >co.suscriptor</field><!-- hace referencia al objeto creado en la clase -->
    		<field name="arch" type="xml"> <!-- lo que este dentro de este sera lo que se muestre-->
    			<tree string="Suscriptor" >
					<field name="nombre" />
    				<field name="cedula" />
    				<field name="direccion" />
    				
    			</tree>
    		</field>
    	</record>




    	<record id="action_suscriptor" model="ir.actions.act_window" >
    		<field name="name" >Suscriptor</field><!-- es-a esla verdadera etiqueta del menu-->
    		<field name="res_model" >co.suscriptor</field>
    		<field name="view_type" >form</field>
    		<field name="view_mode" >form,tree</field>
    		<field name="view_id" ref="view_suscriptor_tree"/>
    		<field name="help" type="html">
    			<p class="oe_view_nocontent_create">
    				Aca se registran los contenidos para un suscriptor que estarán disponibles en el cátalogo.
    			</p>
    		</field>
    	</record> 

	   	<menuitem action="action_suscriptor" id="menu_suscriptor" sequence="5" 
	   		parent="submebu_multimedia" /> 
	   		<!--este es el menu multimedia como tal.... y toma el action de la de la linea 37-->
    </data>
</openerp>